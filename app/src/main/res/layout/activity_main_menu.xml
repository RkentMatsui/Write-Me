<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/design">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="101dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/menu_start"
            android:onClick="onStart" />
       <!-- -->


        <Button
            android:id="@+id/btnAchieve"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="75dp"
            android:background="@drawable/menu_achieve"
            android:onClick="onAchieve" />


        <Button
            android:id="@+id/btnExit"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/history"
            android:layout_below="@+id/history"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/menu_exit"
            android:onClick="onExit" />

        <Button
            android:id="@+id/history"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/practice"
            android:layout_below="@+id/btnAchieve"
            android:layout_marginTop="180dp"
            android:background="@drawable/history"
            android:onClick="goHistory" />

        <Button
            android:id="@+id/practice"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/btnStart"
            android:layout_below="@+id/btnStart"
            android:layout_marginTop="14dp"
            android:background="@drawable/practice"
            android:onClick="onPractice"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
