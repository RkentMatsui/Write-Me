<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WritingBoard">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/board">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/tutorialview"
            android:layout_width="280dp"
            android:layout_height="270dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="21dp"
            android:src="@drawable/anim_a" />

        <com.example.rowielokentmatsui.writeme.views.DrawView
            android:id="@+id/draw"
            android:layout_width="280dp"
            android:layout_height="290dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:visibility="visible" />

        <Button
            android:id="@+id/audio"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tutorialview"
            android:layout_marginStart="16dp"
            android:background="@drawable/button_sound"
            android:onClick="audiobutt" />

        <Button
            android:id="@+id/back"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/erase"
            android:background="@drawable/button_back"
            android:onClick="backer" />

        <Button
            android:id="@+id/erase"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/audio"
            android:background="@drawable/button_erase"
            android:onClick="eraseboard" />


        <Button
            android:id="@+id/button2"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="78dp"
            android:background="@drawable/button_check"
            android:onClick="checkifriht" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
