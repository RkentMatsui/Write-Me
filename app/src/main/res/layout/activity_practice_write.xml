<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rowielokentmatsui.writeme.Practice_write">


    <!--<pl.droidsonroids.gif.GifImageView-->
    <!--android:id="@+id/gifpractice"-->
    <!--android:layout_width="300dp"-->
    <!--android:layout_height="300dp"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_marginEnd="130dp"-->
    <!--android:src="@drawable/anim_a" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg">

        <ImageView
            android:id="@+id/gifpractice"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignStart="@+id/drawwing"
            android:layout_alignTop="@+id/drawwing"
            android:background="@android:color/background_light"
            android:src="@drawable/anim_a"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="5dp" />

        <com.example.rowielokentmatsui.writeme.views.DrawView
            android:id="@+id/drawwing"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginLeft="146dp"
            android:layout_marginTop="5dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/backpract"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/gifpractice"
            android:layout_marginStart="14dp"
            android:background="@drawable/button_back"
            android:onClick="backer" />

        <Button
            android:id="@+id/erasepract"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/gifpractice"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="18dp"
            android:background="@drawable/button_erase"
            android:onClick="eraseboard" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/black_overlay"
            android:onClick="backingna"
            app:srcCompat="@drawable/keyboard2" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/black_overlay"
            android:onClick="nexter"
            app:srcCompat="@drawable/keyboard" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
